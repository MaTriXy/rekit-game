package edu.kit.informatik.ragnarok.logic.gameelements;

import org.eclipse.swt.graphics.Color;
import org.eclipse.swt.graphics.GC;

import config.c;
import edu.kit.informatik.ragnarok.logic.Vec2D;

public class Inanimate extends GameElement {
	
	private Vec2D size;
	
	private int color;
	
	public Inanimate(Vec2D size, int color) {
		this.size = size;
		this.color = color;		
	}

	@Override
	public void render(GC gc) {
		Vec2D pos = this.getPos();
		gc.fillRectangle(
				(int) ((pos.getX() - 0.5f) * c.pxPerUnit),
				(int) ((pos.getY() - 0.5f) * c.pxPerUnit),
				1 * c.pxPerUnit,
				1 * c.pxPerUnit 
				);
	}

	@Override
	public void damage(int damage) {
		// TODO implement this operation
		throw new UnsupportedOperationException("not implemented");

	}

	@Override
	public void resetPosition() {
		// TODO implement this operation
		throw new UnsupportedOperationException("not implemented");
	}

}
